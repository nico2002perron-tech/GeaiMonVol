{
    "functions": {
        "src/app/api/cron/scan-prices/route.ts": {
            "maxDuration": 60
        },
        "src/app/api/cron/send-alerts/route.ts": {
            "maxDuration": 60
        }
    },
    "crons": [
        {
            "path": "/api/cron/scan-prices?secret=${CRON_SECRET}",
            "schedule": "0 8 * * *"
        },
        {
            "path": "/api/cron/send-alerts?secret=${CRON_SECRET}",
            "schedule": "0 9 * * *"
        }
    ]
}
